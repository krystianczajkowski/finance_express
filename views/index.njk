{% extends 'layout.njk' %}
{% block title %}
    {{ title }}
{% endblock %}
{% block main %}
    {% if not message %}
        <p>No messages!</p>
    {% endif %}
    <h1>
        {{ message }}
    </h1>
    <table class="fs-4 mb-6 container-fluid py-6 text-center">
        <thead class="fs-2">
            <tr>
                <h1 class="display-5 border-1">
                    BALANCE: {{ balance | usd }}
                    |||
                    GRAND TOTAL {{ total_value | usd }}
                </h1>
            </tr>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Stock Value</th>
                <th>Total Value</th>
            </tr>
        </thead>
        <tbody>
            {% for k,s in stocks %}
                <tr class="mt-3 mb-4">
                    <th>{{ k }}</th>
                    <th>{{ s.quant }}</th>
                    <th>{{ s.value | usd }}</th>
                    <th>{{ s.total_value | usd }}</th>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}